{
  "name": "angel-giving",
  "license": "UNLICENSED",
  "scripts": {
    "codegen": "graph codegen ./polygon/subgraph.yaml && graph codegen ./sidechain/subgraph.yaml",
    "build": "function f() { graph build ./$1/subgraph.yaml --network $2; }; f",
    "deploy": "function f() { graph deploy --node https://api.studio.thegraph.com/deploy/ angel-giving ./$1/subgraph.yaml --network $2; }; f",
    "create-local": "graph create --node http://localhost:8020/ angel-giving",
    "remove-local": "graph remove --node http://localhost:8020/ angel-giving",
    "deploy-local": "graph deploy --node http://localhost:8020/ --ipfs http://localhost:5001 angel-giving",
    "test": "graph test"
  },
  "dependencies": {
    "@graphprotocol/graph-cli": "^0.57.0",
    "@graphprotocol/graph-ts": "^0.31.0"
  },
  "devDependencies": {
    "matchstick-as": "^0.5.2"
  }
}
